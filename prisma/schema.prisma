generator client {
  provider = "prisma-client-js"
}

// The datasource `url` property is deprecated in Prisma 5+ and should be moved to prisma.config.ts
datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  imageUrl  String
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
